@model IEnumerable<AssignmentGD1.Models.MonAn>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh Sách Món</h1>

<p>
    <a asp-action="Create">Thêm Mới?</a>
</p>
<table class="table" enctype="multipart/form-data">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhanLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhanLoai)
            </td>
            <td>
                <img src="~/images/monan/@item.HinhAnh" style="width:150px" />
                @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MonAnId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MonAnId">Xem</a>
                @*<a asp-action="Delete" asp-route-id="@item.MonAnId">Xóa</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
